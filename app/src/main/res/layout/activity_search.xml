<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="searchVM" type="com.curevivedoctor.app.modules.search.data.viewmodel.SearchVM"/>
    </data>
    <LinearLayout android:id="@+id/linearSearch"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <androidx.appcompat.widget.Toolbar
            android:gravity="center_horizontal"
            android:id="@+id/toolbarToolbar"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_1pxh"
            android:layout_marginTop="@dimen/_1pxv"
            android:layout_width="match_parent"
            app:contentInsetStart="0dp" style="@style/groupStylewhite_2">
            <LinearLayout android:id="@+id/linearRowclose"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8pxv"
                android:layout_marginEnd="@dimen/_16pxh"
                android:layout_marginStart="@dimen/_22pxh"
                android:layout_marginTop="@dimen/_15pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <ImageView android:id="@+id/imageClose"
                    android:layout_height="@dimen/_23pxh"
                    android:layout_marginBottom="@dimen/_13pxv"
                    android:layout_marginTop="@dimen/_16pxv"
                    android:layout_width="@dimen/_23pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_close_bluegray_801"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_close_bluegray_801"/>
                <FrameLayout android:id="@+id/frameStacksearch"
                    android:layout_height="@dimen/_53pxv"
                    android:layout_marginStart="@dimen/_16pxh" android:layout_width="@dimen/_280pxh">
                    <FrameLayout android:id="@+id/frameButton"
                        android:layout_gravity="start"
                        android:layout_height="@dimen/_31pxv"
                        android:layout_marginBottom="@dimen/_11pxv"
                        android:layout_marginEnd="@dimen/_16pxh"
                        android:layout_marginStart="@dimen/_16pxh"
                        android:layout_marginTop="@dimen/_11pxv"
                        android:layout_width="@dimen/_33pxh" style="@style/groupStylecornerRadius_9">
                        <ImageView android:id="@+id/imageSearch"
                            android:layout_gravity="center"
                            android:layout_height="@dimen/_20pxh"
                            android:layout_marginBottom="@dimen/_5pxv"
                            android:layout_marginEnd="@dimen/_6pxh"
                            android:layout_marginStart="@dimen/_6pxh"
                            android:layout_marginTop="@dimen/_5pxv"
                            android:layout_width="@dimen/_20pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_search_white_a700_20x20"
                            tools:ignore="ContentDescription" tools:src="@drawable/img_search_white_a700_20x20"/>
                    </FrameLayout>
                    <androidx.appcompat.widget.AppCompatButton
                        android:ellipsize="end" android:gravity="center"
                        android:id="@+id/btnSearchForPatients"
                        android:layout_gravity="start"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:paddingBottom="@dimen/_16pxv"
                        android:paddingEnd="@dimen/_30pxh"
                        android:paddingStart="@dimen/_30pxh"
                        android:paddingTop="@dimen/_16pxv"
                        android:singleLine="true"
                        android:text="@string/msg_search_for_pati"
                        android:textAllCaps="false"
                        style="@style/btnRoundedOutline_1" tools:text="@string/msg_search_for_pati"/>
                </FrameLayout>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <TextView android:ellipsize="end"
            android:id="@+id/txtDiseaseFilter"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_8pxv"
            android:layout_width="wrap_content"
            android:lineSpacingExtra="@dimen/_5pxh"
            android:singleLine="true"
            android:text="@{searchVM.searchModel.txtDiseaseFilter}"
            style="@style/txtAssistantromanregular14_1" tools:text="@string/lbl_disease_filter"/>
        <HorizontalScrollView android:fillViewport="true"
            android:gravity="end"
            android:id="@+id/horizontalScrollHorizontalscrollvector"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_7pxv"
            android:layout_width="match_parent" android:scrollbars="none">
            <LinearLayout android:id="@+id/linearRow"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <LinearLayout android:id="@+id/linearRowgroup4308"
                    android:layout_height="wrap_content"
                    android:layout_weight="2.34"
                    android:layout_width="0dp" android:orientation="horizontal">
                    <LinearLayout android:id="@+id/linearRowvector"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.46"
                        android:layout_width="0dp"
                        android:orientation="horizontal" style="@style/groupStylewhite_3">
                        <FrameLayout android:id="@+id/frameStackvector"
                            android:layout_height="@dimen/_31pxv"
                            android:layout_marginBottom="@dimen/_7pxv"
                            android:layout_marginStart="@dimen/_9pxh"
                            android:layout_marginTop="@dimen/_6pxv"
                            android:layout_width="@dimen/_32pxh" style="@style/groupStylecornerRadius_9">
                            <ImageView android:id="@+id/imageVector"
                                android:layout_gravity="center"
                                android:layout_height="@dimen/_22pxh"
                                android:layout_marginBottom="@dimen/_4pxv"
                                android:layout_marginEnd="@dimen/_4pxh"
                                android:layout_marginStart="@dimen/_4pxh"
                                android:layout_marginTop="@dimen/_5pxv"
                                android:layout_width="@dimen/_24pxh"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_vector"
                                tools:ignore="ContentDescription" tools:src="@drawable/img_vector"/>
                        </FrameLayout>
                        <TextView android:ellipsize="end"
                            android:id="@+id/txtParty"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_11pxv"
                            android:layout_marginEnd="@dimen/_8pxh"
                            android:layout_marginStart="@dimen/_7pxh"
                            android:layout_marginTop="@dimen/_13pxv"
                            android:layout_weight="0.74"
                            android:layout_width="0dp"
                            android:lineSpacingExtra="@dimen/_5pxh"
                            android:singleLine="true"
                            android:text="@{searchVM.searchModel.txtParty}"
                            style="@style/txtAssistantsemibold14" tools:text="@string/lbl_hyperlipidemia"/>
                    </LinearLayout>
                    <EditText
                        android:background="@drawable/rectangle_bg_white_a700_radius_15"
                        android:drawablePadding="@dimen/_7pxh"
                        android:drawableStart="@drawable/drawable_img_airplane"
                        android:ellipsize="end"
                        android:hint="@string/lbl_hypertension"
                        android:id="@+id/etGroup4308"
                        android:inputType="text"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_12pxh"
                        android:layout_weight="0.44"
                        android:layout_width="0dp"
                        android:lineSpacingExtra="@dimen/_5pxh"
                        android:paddingBottom="@dimen/_10pxv"
                        android:paddingEnd="@dimen/_14pxh"
                        android:paddingStart="@dimen/_7pxh"
                        android:paddingTop="@dimen/_14pxv"
                        android:singleLine="true"
                        android:text="@={searchVM.searchModel.etGroup4308Value}"
                        android:textColorHint="@color/gray_800"
                        style="@style/etSolidRounded" tools:ignore="Autofill"/>
                    <ImageView android:id="@+id/imageGreyBgTwo"
                        android:layout_height="@dimen/_44pxh"
                        android:layout_marginStart="@dimen/_12pxh"
                        android:layout_width="@dimen/_30pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_greybg2"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_greybg2"/>
                </LinearLayout>
                <LinearLayout android:id="@+id/linearRowfemalereproduc"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_196pxh"
                    android:layout_weight="0.96"
                    android:layout_width="0dp"
                    android:orientation="horizontal" style="@style/groupStylewhite_3">
                    <FrameLayout
                        android:id="@+id/frameStackfemalereproduc"
                        android:layout_height="@dimen/_34pxv"
                        android:layout_marginBottom="@dimen/_4pxv"
                        android:layout_marginTop="@dimen/_6pxv" android:layout_width="@dimen/_32pxh">
                        <ImageView android:id="@+id/imageButton"
                            android:layout_gravity="top|start"
                            android:layout_height="@dimen/_31pxv"
                            android:layout_marginBottom="@dimen/_10pxv"
                            android:layout_width="match_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_button"
                            tools:ignore="ContentDescription" tools:src="@drawable/img_button"/>
                        <ImageView android:id="@+id/imageFemalereproduc"
                            android:layout_gravity="bottom|center"
                            android:layout_height="@dimen/_18pxh"
                            android:layout_marginBottom="@dimen/_6pxv"
                            android:layout_marginEnd="@dimen/_2pxh"
                            android:layout_marginStart="@dimen/_2pxh"
                            android:layout_marginTop="@dimen/_10pxv"
                            android:layout_width="@dimen/_26pxh"
                            android:scaleType="fitXY"
                            android:src="@drawable/img_femalereproduc"
                            tools:ignore="ContentDescription" tools:src="@drawable/img_femalereproduc"/>
                    </FrameLayout>
                    <ImageButton
                        android:background="@drawable/rectangle_gradient_s_light_blue_a700_f7_c_light_blue_a700_3d_e_light_blue_a700_26_radius_15_5"
                        android:id="@+id/btnSettings"
                        android:layout_height="@dimen/_31pxh"
                        android:layout_marginBottom="@dimen/_7pxv"
                        android:layout_marginStart="@dimen/_197pxh"
                        android:layout_marginTop="@dimen/_6pxv"
                        android:layout_width="@dimen/_32pxh"
                        android:paddingHorizontal="@dimen/_1pxh"
                        android:paddingVertical="@dimen/_1pxv"
                        android:scaleType="fitCenter"
                        android:src="@drawable/img_settings_black_900" tools:ignore="ContentDescription"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtPartyOne"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_12pxv"
                        android:layout_marginEnd="@dimen/_10pxh"
                        android:layout_marginStart="@dimen/_7pxh"
                        android:layout_marginTop="@dimen/_12pxv"
                        android:layout_weight="-1.14"
                        android:layout_width="0dp"
                        android:lineSpacingExtra="@dimen/_6pxh"
                        android:singleLine="true"
                        android:text="@{searchVM.searchModel.txtPartyOne}"
                        style="@style/txtAssistantsemibold14" tools:text="@string/lbl_osteoarthritis"/>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
        <TextView android:ellipsize="end"
            android:id="@+id/txtRecentSearchs"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_16pxh"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_16pxv"
            android:layout_width="wrap_content"
            android:lineSpacingExtra="@dimen/_5pxh"
            android:singleLine="true"
            android:text="@{searchVM.searchModel.txtRecentSearchs}"
            style="@style/txtAssistantromanregular14_1" tools:text="@string/lbl_recent_search_s"/>
        <androidx.recyclerview.widget.RecyclerView
            android:gravity="center_horizontal"
            android:id="@+id/recyclerSearch"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_352pxv"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginStart="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_13pxv"
            android:layout_width="match_parent"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            itemSpace="@{@dimen/_13pxh}" tools:itemCount="2" tools:listitem="@layout/row_search"/>
    </LinearLayout>
</layout>
