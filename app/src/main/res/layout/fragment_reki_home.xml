<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearHome"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    style="@style/groupStylewhite_A700_01"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout android:gravity="center_vertical"
        android:id="@+id/linearRowkabirsingh"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/_7pxv"
        android:paddingEnd="@dimen/_15pxh"
        android:paddingStart="@dimen/_15pxh"
        android:paddingTop="@dimen/_7pxv"
        style="@style/groupStylewhite_A700_01cornerRadius">
        <ImageView android:id="@+id/imageImageoneOne"
            android:layout_height="@dimen/_73pxh"
            android:layout_marginTop="@dimen/_7pxv"
            android:layout_width="@dimen/_74pxh"
            android:scaleType="centerCrop"
            android:src="@drawable/img_image_1"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_image_1"/>
        <LinearLayout android:gravity="start"
            android:id="@+id/linearColumnkabirsing"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_13pxv"
            android:layout_marginStart="@dimen/_16pxh"
            android:layout_marginTop="@dimen/_22pxv"
            android:layout_width="match_parent"
            android:orientation="vertical">
            <TextView android:ellipsize="end"
                android:id="@+id/txtKabirsingh"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="@string/lbl_kabir_singh"
                style="@style/txtAssistantbold24"
                tools:text="@string/lbl_kabir_singh"/>
            <LinearLayout android:id="@+id/linearRowview"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" android:orientation="horizontal">
                <View
                    android:background="@drawable/rectangle_bg_teal_300_radius_2"
                    android:id="@+id/viewView"
                    android:layout_height="@dimen/_4pxh"
                    android:layout_marginBottom="@dimen/_5pxv"
                    android:layout_marginTop="@dimen/_4pxv" android:layout_width="@dimen/_4pxh"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtRekimaster"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2pxh"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="@string/lbl_reki_master"
                    style="@style/txtAssistantsemibold12"
                    tools:text="@string/lbl_reki_master"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/linearRowtask"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_79pxv"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <TextView android:ellipsize="end"
                android:id="@+id/txtTime"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_16pxh"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@string/lbl_time"
                style="@style/txtPoppinsmedium141"
                tools:text="@string/lbl_time"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtTask"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@string/lbl_task"
                style="@style/txtPoppinsmedium141"
                android:layout_marginStart="42dp"
                tools:text="@string/lbl_task"/>
            <ImageView android:id="@+id/imageVectorOne"
                android:layout_height="@dimen/_16pxh"
                android:layout_marginBottom="@dimen/_3pxv"
                android:layout_marginStart="@dimen/_205pxh"
                android:layout_marginTop="@dimen/_3pxv"
                android:layout_width="@dimen/_24pxh"
                android:scaleType="fitXY"
                android:src="@drawable/alltask"
                tools:ignore="ContentDescription"
                tools:src="@drawable/alltask"/>
        </LinearLayout>




    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>