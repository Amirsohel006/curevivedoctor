<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/linearQueryPopUp"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/groupStylegray_100cornerRadius">


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_marginEnd="@dimen/_18pxh"
        android:layout_marginStart="@dimen/_18pxh"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textview"
            android:text="Chief Complaints"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_height="wrap_content"
            style="@style/txtPoppinsmedium12_51"/>

        <ImageView
            android:layout_marginStart="70dp"
            android:id="@+id/sclose"
            android:layout_gravity="end"
            android:src="@drawable/img_close_black"
            android:layout_width="24dp"
            android:layout_height="24dp"/>

    </LinearLayout>


    <LinearLayout android:id="@+id/linearColumnoccupatio"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/_18pxh"
        android:layout_marginStart="@dimen/_18pxh"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_6pxv"
        android:paddingEnd="@dimen/_10pxh"
        android:paddingStart="@dimen/_10pxh"
        android:paddingTop="@dimen/_6pxv"
        style="@style/groupStyleindigo_50cornerRadius">






        <EditText
            android:background="@drawable/rectangle_bg_white_a700_radius_19"
            android:hint="@string/lbl_write_here"
            android:id="@+id/etOccupationOne"
            android:inputType="text"
            android:layout_height="300dp"
            android:layout_marginTop="@dimen/_20pxv"
            android:layout_width="match_parent"
            android:letterSpacing="0.0"
            android:paddingEnd="@dimen/_20pxh"
            android:paddingStart="@dimen/_20pxh"
            android:paddingTop="30dp"
           android:gravity="top"
            android:singleLine="true"
            android:textColorHint="@color/blue_gray_300"
            style="@style/etSolidRounded"
            tools:ignore="Autofill"/>

        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearColumnsubmit"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_14pxh"
            android:layout_marginStart="@dimen/_14pxh"
            android:layout_marginTop="@dimen/_44pxv"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylecornerRadius_3">
            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end" android:gravity="center"
                android:id="@+id/btnSubmit"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_14pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_14pxv"
                android:singleLine="true"
                android:text="@string/lbl_submit"
                android:textAllCaps="false"
                style="@style/btnGradientRounded"
                tools:text="@string/lbl_submit"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>